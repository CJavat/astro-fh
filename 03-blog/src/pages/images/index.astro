---
import { Image, Picture } from "astro:assets";
import MainLayout from "../../layouts/MainLayout.astro";

import post05img from "@images/post-05.png";
---

<MainLayout title="Imágenes">
  <h1 class="text-5xl text-white">Imágenes</h1>

  <img
    loading="eager"
    src="/assets/images/post-05.png"
    alt="Imagen de prueba"
    width="250"
    height="250"
  />

  <Image src={post05img} alt="Imagen de prueba" width="250" height="250" />
  <Image
    src={post05img}
    alt="Imagen de prueba"
    width="250"
    height="250"
    format="avif"
    quality="max"
  />

  <!-- formats={["avif", "png", "webp", "svg"]} -->
  <!-- widths={[240, 540, 720, post05img.width]}
  sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05img.width}px`} -->
  <!-- width={post05img.width / 2}
  densities={[1.5, 2]} -->
  <Picture
    src={post05img}
    alt="Imagen de prueba"
    width="250"
    height="250"
    quality="max"
  />

  <div
    style={{
      height: "3000px",
    }}
  >
  </div>

  <img
    loading="lazy"
    src="/assets/images/post-01.png"
    alt="Imagen de prueba2"
    width="250"
    height="250"
  />
</MainLayout>
